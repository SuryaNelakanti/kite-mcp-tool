{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "outDir": "backend/dist",
    "rootDir": "./backend",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["backend/**/*.ts", "types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
